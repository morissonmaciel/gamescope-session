User_Alias      STEAMOS_POWERGROUP = gamer

Cmnd_Alias      POWER = /sbin/shutdown, /sbin/halt, /sbin/reboot, /sbin/restart
Cmnd_Alias      SERVICES_D = /usr/libexec/return-to-gamemode, /usr/bin/systemctl start return-to-gamemode.service

STEAMOS_POWERGROUP      ALL = POWER
STEAMOS_POWERGROUP      ALL = SERVICES_D
